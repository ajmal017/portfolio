{% extends 'base.html.twig' %}

{% block title %}Client Detail{% endblock %}

{% block body %}
    <h1>{{ client.name }}</h1>
    <p>{{ client.getClientLast }}, {{ client.getClientFirst }}</p>
    <p>
        {% if client.parent %}

        Parent: {{ client.parent }}

        {% endif %}



    {% if parents %}
        <h3>Child Clients</h3>
        {% for parent in parents %}
        <a href="{{ parent.id }}">{{ parent }}</a>  <br/>
        {% endfor %}

    {% endif %}

        {% if client.works %}
        <h3>Works:</h3>
            {% for work in client.works %}
            <a href="/work/{{ work.id }}">{{ work }}</a> <br>


            {% endfor %}
        {% endif %}

    </p>
    <hr>
    <a href="/clients">Back to client menu</a>
{% endblock %}

